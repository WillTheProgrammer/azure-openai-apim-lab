# Copy this file to .env and fill in your values after deploying infrastructure.
# Run: cp .env.sample .env

# --- Azure OpenAI (direct access) ---
OPENAI_ENDPOINT_1=https://<your-aoai-eastus>.openai.azure.com/
OPENAI_ENDPOINT_2=https://<your-aoai-eastus2>.openai.azure.com/
OPENAI_MODEL_DEPLOYMENT=gpt-4o
OPENAI_API_VERSION=2025-03-01-preview

# --- APIM Gateway ---
APIM_GATEWAY_URL=https://<your-apim>.azure-api.net
APIM_SUBSCRIPTION_KEY=<from-apim-subscriptions-blade>

# --- AI Foundry ---
AI_FOUNDRY_PROJECT_CONNECTION_STRING=<from-ai-foundry-project-overview>

# --- AI Search (for grounding) ---
AI_SEARCH_ENDPOINT=https://<your-search>.search.windows.net
AI_SEARCH_INDEX_NAME=<your-index-name>
